@model Cobloga.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ValidationSummary(true)

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(u => u.Email)<br />
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })<br />
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Password)<br />
            @Html.PasswordFor(u => u.Password, new { @class = "form-control" })<br />
        </div>
        <p>
            <button type="submit" class="btn btn-default">Register</button>
        </p>
    }
</div>

