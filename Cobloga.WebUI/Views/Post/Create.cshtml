
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="well" ng-controller="CreatePostController">
        <div>
            <textarea ui-tinymce ng-model="tinymceModel"></textarea>
            <div class="checkbox">
                <label>
                    <input type="checkbox" ng-model="isPublic"> Is Public?
                </label>
            </div>
            <button type="button" ng-click="Save()" class="btn btn-default btn-lg btn-block">Save</button>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/controllers/CreatePostController.js"></script>
}


