
@model Cobloga.Data.DataModel.CbaPost

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="well" ng-show="textEditorAvailable" ng-controller="UpdatePostController" ng-init="postId = '@Model.ID';tinymceModel=@Json.Encode(Model.Content);">
        <div>
            <textarea ui-tinymce ng-model="tinymceModel"></textarea>
            <div class="checkbox">
                <label>
                    <input type="checkbox"  checked="@Model.IsPublic"> Is Public?
                </label>
            </div>
            <button type="button" ng-click="Update()" class="btn btn-default btn-lg btn-block">Update</button>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/controllers/UpdatePostController.js"></script>
}

